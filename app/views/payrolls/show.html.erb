<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card panel hoverable">
    <h2>Payroll for <%= @store.name %> Store </h2>
    <h3> From <%= @start_date.strftime("%-m/%-d/%y") %> to <%= @end_date.strftime("%-m/%-d/%y") %></h3>
  </div>
</div>

<div class="card">
  <div class="card panel hoverable">
    <table>
      <thead>
        <tr>
          <th>Employee</th>
          <th>SSN</th>
          <th>Store</th>
          <th>Pay Grade</th>
          <th>Pay Grade Rates</th>
          <th>Total Hours</th>
          <th>Total Pay</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% for emp in @store_emp %>
          <tr>
            <td><%= emp.name %></td>
            <td><%= emp.ssn %></td>
        	<td><%= emp.current_assignment.store.name %></td>
        	<td><%= emp.pay_grades.first.level %></td>
        	<td><%= emp.pay_grade_rates.first.rate %></td>
        	<td><%= @hours %></td>
        	<td><%= @pay_earned %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @store_emp, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>

  </div>
</div>