<p id="notice"><%= notice %></p>

<h1>Pay Grade Rates</h1>

<table>
  <thead>
    <tr>
      <th>Pay grade</th>
      <th>Rate</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_grade_rates.each do |pay_grade_rate| %>
      <tr>
        <td><%= pay_grade_rate.pay_grade_id %></td>
        <td><%= pay_grade_rate.rate %></td>
        <td><%= pay_grade_rate.start_date %></td>
        <td><%= pay_grade_rate.end_date %></td>
        <td><%= link_to 'Show', pay_grade_rate %></td>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay Grade Rate', new_pay_grade_rate_path %>
