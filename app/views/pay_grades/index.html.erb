<p id="notice"><%= notice %></p>

<h1>Pay Grades</h1>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_grades.each do |pay_grade| %>
      <tr>
        <td><%= pay_grade.level %></td>
        <td><%= pay_grade.active %></td>
        <td><%= link_to 'Show', pay_grade %></td>
        <td><%= link_to 'Edit', edit_pay_grade_path(pay_grade) %></td>
        <td><%= link_to 'Destroy', pay_grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay Grade', new_pay_grade_path %>
